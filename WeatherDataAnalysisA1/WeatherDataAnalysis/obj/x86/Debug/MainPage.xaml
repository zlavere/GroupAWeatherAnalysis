<Page
    x:Class="WeatherDataAnalysis.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <CommandBar>
            <CommandBar.Content>
                <Grid />
            </CommandBar.Content>
            <AppBarButton x:ConnectionId='9' Icon="OpenFile" Label="Load File"                        />
        </CommandBar>
        <TextBox x:ConnectionId='2' x:Name="summaryTextBox" HorizontalAlignment="Left" Margin="234,98,0,0" VerticalAlignment="Top"
                 TextWrapping="Wrap" Text="Summary" Height="276" Width="600" IsReadOnly="True"
                 AutomationProperties.Name="summaryTextBlock" />
        <TextBlock HorizontalAlignment="Left" Margin="12,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top">
            <Run Text="Weather Analysis" /><LineBreak /><Run /><LineBreak /><Run />
        </TextBlock>
        <TextBlock x:ConnectionId='3' x:Name="MonthLabel" HorizontalAlignment="Left" Margin="25,84,0,0" Text="Month" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:ConnectionId='4' x:Name="MonthInput" HorizontalAlignment="Left" Margin="25,104,0,0" Text="" VerticalAlignment="Top" PlaceholderText="Month to analyze" Width="156"/>
        <TextBlock x:ConnectionId='5' x:Name="HighTempLabel" HorizontalAlignment="Left" Margin="24,148,0,0" Text="High Temperature Threshold" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:ConnectionId='6' x:Name="HighTempInput" HorizontalAlignment="Left" Margin="24,170,0,0" VerticalAlignment="Top" PlaceholderText="High Temp" Width="93"/>
        <TextBlock x:ConnectionId='7' x:Name="LowTempLabel" HorizontalAlignment="Left" Margin="26,218,0,0" Text="Low Temperature Threshold" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:ConnectionId='8' x:Name="lowTempInput" HorizontalAlignment="Left" Margin="25,239,0,0" VerticalAlignment="Top" PlaceholderText="Low Temp" Width="93"/>

    </Grid>
</Page>

